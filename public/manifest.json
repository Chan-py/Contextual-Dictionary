{
  "manifest_version": 3,
  "name": "Contextual Dictionary v2",
  "version": "1.0",
  "description": "Get word meanings with context.",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "192": "logo192.png",
      "512": "logo512.png"
    }
  },
  "commands": {
    "translate_word": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y"
      },
      "description": "Translate the selected word with context"
    }
  }
}